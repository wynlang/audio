test "detect wav" {
    // Audio format detection
    var wav = "sound.wav"
    var mp3 = "music.mp3"
    assert(wav.ends_with(".wav"))
}

test "detect mp3" {
    // Audio format detection
    var wav = "sound.wav"
    var mp3 = "music.mp3"
    assert(mp3.ends_with(".mp3"))
}

test "bytes per sec" {
    // Audio format detection
    var wav = "sound.wav"
    var mp3 = "music.mp3"
    // Sample rate math
    var sample_rate = 44100
    var channels = 2
    var bits = 16
    var bytes_per_sec = sample_rate * channels * (bits / 8)
    assert_eq(bytes_per_sec, 176400)
}
